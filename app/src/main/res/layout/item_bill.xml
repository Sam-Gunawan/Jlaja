<!-- res/layout/item_bill.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bill Name -->
        <TextView
            android:id="@+id/bill_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Name"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Total Amount -->
        <TextView
            android:id="@+id/total_amount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amount: $0.00"
            android:layout_marginTop="4dp" />

        <!-- Paid By -->
        <TextView
            android:id="@+id/paid_by_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid by: "
            android:layout_marginTop="4dp" />

        <!-- Members' shares container -->
        <LinearLayout
            android:id="@+id/members_shares_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
