<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header for Bills List -->
    <TextView
        android:id="@+id/bills_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Bill Summary Section (Displayed below header) -->
    <TextView
        android:id="@+id/bill_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Name"
        android:visibility="gone" /> <!-- Initially hidden, will show when bill is saved -->

    <TextView
        android:id="@+id/bill_amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:visibility="gone" /> <!-- Initially hidden -->

    <TextView
        android:id="@+id/paid_by_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid By"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- RecyclerView for members list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/members_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- RecyclerView for the list of bills (below the bill summary) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bills_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Button to add a new bill -->
    <Button
        android:id="@+id/add_bill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Bill"
        android:padding="8dp"
        android:textSize="16sp" />

</LinearLayout>
